DATABASE_URL=postgresql://username:password@localhost:5432/keysers_dashboard
NEXTAUTH_SECRET=
NEXTAUTH_URL=

# ========================================
# INVENTORY DATABASE (keysers_inventory)
# ========================================
# Separate database for catalog/inventory data
INVENTORY_DB_HOST=localhost
INVENTORY_DB_PORT=5432
INVENTORY_DB_NAME=keysers_inventory
INVENTORY_DB_USER=keysers
INVENTORY_DB_PASSWORD=your_inventory_db_password_here

# ========================================
# ADMIN AUTOMATION (OPTIONAL)
# ========================================
# Allows calling certain admin endpoints from cron/CLI without a browser session.
# Must be at least 32 characters.
ADMIN_CRON_KEY=your_admin_cron_key_here_min_32_chars

# ========================================
# WEBHOOK SECURITY
# ========================================

# Webhook HMAC Signature Secret (REQUIRED for production)
# Generate with: openssl rand -hex 32
# Use different secrets per environment (dev/staging/prod)
# Minimum 32 characters recommended
WEBHOOK_SECRET=your_webhook_signing_secret_here_min_32_chars

# Legacy API Key (deprecated - use WEBHOOK_SECRET instead)
# Kept for backward compatibility during migration period
DASHBOARD_API_KEY=your_secret_api_key_here

# ========================================
# SECRET ROTATION STRATEGY
# ========================================
# To rotate WEBHOOK_SECRET without downtime:
# 1. Generate new secret: openssl rand -hex 32
# 2. Add new secret as WEBHOOK_SECRET_NEW in .env
# 3. Update verification logic to accept both secrets
# 4. Deploy to production
# 5. Update bot to use new secret
# 6. After 24h, remove old secret and rename _NEW to primary
# ========================================

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@keysers.co.za
ADMIN_EMAIL=admin@keysers.co.za
COMPANY_NAME=Keysers
COMPANY_WEBSITE=https://keysers.co.za
DASHBOARD_URL=http://localhost:3000
